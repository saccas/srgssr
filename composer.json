{
	"name": "saccas/srgssr",
	"type": "typo3-cms-extension",
	"description": "Online media provider for srgssr.ch",
	"keywords": [
		"TYPO3",
		"extension",
		"online media helper",
		"video",
		"fal"
	],
	"license": [
		"GPL-2.0-or-later"
	],
	"require": {
		"php": ">= 8.3 < 8.4",
		"helhum/typo3-console": "^8.2",
		"typo3/cms-backend": "^13.4",
		"typo3/cms-core": "^13.4",
		"typo3/cms-extbase": "^13.4",
		"typo3/cms-filelist": "^13.4",
		"typo3/cms-filemetadata": "^13.4",
		"typo3/cms-fluid": "^13.4",
		"typo3/cms-frontend": "^13.4",
		"typo3/cms-install": "^13.4"
	},
	"require-dev": {
		"phpstan/extension-installer": "^1.4",
		"phpstan/phpstan": "^2.1",
		"saschaegerer/phpstan-typo3": "^2.1",
		"ssch/typo3-rector": "^3.1",
		"typo3/coding-standards": "^0.8.0"
	},
	"config": {
		"lock": false,
		"sort-packages": true,
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin",
		"allow-plugins": {
			"phpstan/extension-installer": true,
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		}
	},
	"autoload": {
		"psr-4": {
			"Saccas\\Srgssr\\": "Classes"
		}
	},
	"extra": {
		"typo3/cms": {
			"app-dir": ".Build",
			"extension-key": "srgssr",
			"web-dir": ".Build/public"
		}
	},
	"scripts": {
		"cs": "./.Build/vendor/bin/php-cs-fixer fix -v --config=./Build/.php-cs-fixer.php --diff --dry-run ",
		"rector": "./.Build/vendor/bin/rector process --config=./Build/rector.php --output-format=console --dry-run"
	}
}
